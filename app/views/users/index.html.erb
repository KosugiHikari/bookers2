<!-- ログインユーザーのindexページ -->
<%= render 'info', user:@user %>
<%= render 'books/new', book:@book %>

<!-- 投稿しているユーザー一覧 -->
<h1>Users</h1>
<% @users.each do |book| %>
<div>
  <!-- アカウント画像 -->
  <%= image_tag book.user.get_profile_image(100,100) %>
  <!-- ユーザーネーム -->
  <%= user.name %>
  <!-- ユーザー詳細ページへのリンク -->
  <%= link_to book_path(book.id) do %>
    <p>Show</p>
  <% end %>
</div>
<% end %>
