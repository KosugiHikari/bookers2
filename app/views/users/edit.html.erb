<div class="mx-auto mt-3">
  <h1>User info</h1>
    <div class="my-2">
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  
    <%= form_with model: @user do |f| %>
    <div class="mb-3">
      <!-- ユーザーネーム　-->
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
    </div>
    <div class="mb-3">
      <!-- アカウント画像 -->
      <label for="inputImage">Image</label><br>
      <%= f.file_field :profile_image, accept: "image/*" %><br>
    </div>
    <div class="mb-3">
      <!-- 自己紹介文 -->
      <label for="inputIntroduction">Introduction</label><br>
      <%= f.text_area :introduction, id:"inputIntroduction" %><br>
    </div>
    <%= f.submit "Update User" %>
  <% end %>
</div>