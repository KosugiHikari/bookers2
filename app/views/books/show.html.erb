<h1>Book detail</1>
<div>
  <!-- アカウント画像 -->
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <!-- ユーザー名 -->
  <P><%= @book.user.name %></P>
  <!-- 本のタイトル -->
  <p><%= @book.title %></P>
  <!-- 本の紹介文 -->
  <p><%= @book.body %></P>
  <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>